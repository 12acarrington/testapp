	<h1>Microposts Feed (<%= @microposts.count %>)</h1>
<% if @microposts.any? %>

	<ul class="microposts">
		<% @microposts.each do |micropost| %>
			<li class="bar">
				<div class="row">
					<div class="col-sm-2">
						<%= gravatar_for @user %>
					</div>
					<div class="col-sm-10 left" >
						<p> <%= link_to micropost.user.name, micropost.user %> </a></p>
				        <p style="font-weight: bold"><%= micropost.content %></p>
				        <i class="timestamp"><%= time_ago_in_words(micropost.created_at) %> ago</i>
				        <% if current_user?(micropost.user) %>
				        	<%= link_to "delete", micropost, method: :delete, data: { confirm: 'Are you sure you want to delete this post?'}%>
				        <% end %>
					</div>
				</div>
		    </li>
		<% end %>
	</ul>

	<%= will_paginate @microposts %>
<% else %>
<% end %>
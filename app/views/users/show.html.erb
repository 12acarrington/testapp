<%= render "shared/notice" %>
<div class="row">
	<div class="col-sm-2"></div>
	<div class="col-sm-8">
		<div class="row">

			<div class="col-sm-4">
				<%= gravatar_for @user %>
				<span>
				  <%= @user.name %>
				</span>
			</div>

			<div class="col-sm-8">
				<% count = 0 %>
				<% @user.microposts.each do |micropost| %>
						<% count = count + 1 %>
				<%end%>
				<h1>Microposts (<%= count %>)</h1>
				<hr>
				<ul style="list-style: none;">
					<% @user.microposts.each do |micropost| %>
						<li>
					        <p style="font-weight: bold"><%= micropost.content %></p>
					        <p><%= micropost.created_at %></p>
							<hr>
					    </li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	<div class="col-sm-2"></div>
</div>

	






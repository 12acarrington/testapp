<%= render "shared/notice" %>
<div class="row">
	<div class="col-sm-2"></div>
	<div class="col-sm-8">
		<div class="row">

			<div class="col-sm-4">
				<%= gravatar_for @user %>
				<span>
				  <%= @user.name %>
				</span>
			</div>

			<div class="col-sm-8">
				<h1>Microposts (<%= @user.microposts.count %>)</h1>
				<hr>

				<ul class="microposts">
					<% @user.microposts.each do |micropost| %>
						<li>
					        <p style="font-weight: bold"><%= micropost.content %></p>
					        <i><%= time_ago_in_words(micropost.created_at) %></i>
							<hr>
					    </li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	<div class="col-sm-2"></div>
</div>

	






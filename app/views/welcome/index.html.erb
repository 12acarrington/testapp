<% if signed_in? %>
	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-8">
			<div class="row">

				<div class="col-sm-4">
					<%= render 'users/profile' %>
				</div>

				</div>

				<div class="col-sm-8">
					<%= render 'users/feed' %>
				</div>
			</div>
		</div>
		<div class="col-sm-2"></div>
	</div>
<% else %>
	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-8">
			<div class="jumbotron">
			<h1>Welcome to Twooter!</h1>
			<p>This amazing app lets you experience a better Twitter!</p>
			<p>To be able to enjoy the amazing experience, please sign in or if you're new sign up!</p>
			<p>
				<%= link_to "Sign in", signin_path, class: "btn btn-lg btn-primary" %>
				<%= link_to "Sign up", signin_path, class: "btn btn-lg btn-success" %>
			</p>
			</div>
		</div>
		<div class="col-sm-2"></div>
	</div>
<% end %>
